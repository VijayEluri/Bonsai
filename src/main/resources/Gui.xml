<?xml version="1.0" encoding="UTF-8"?>

<frame size="400,600" id="frameview" resizable="1" title="Bonsai" defaultCloseOperation="JFrame.EXIT_ON_CLOSE">
    <panel layout="GridBagLayout">

        <label text="Input value: ">
            <gridbagconstraints gridx="0" gridy="0"/>
        </label>

        <textfield id="input" label="Input" action="submit">
            <gridbagconstraints gridx="1" gridy="0" weightx="0.8" fill="GridBagConstraints.HORIZONTAL"/>
        </textfield>

        <button text="Add value to tree" action="submit">
            <gridbagconstraints gridx="2" gridy="0" fill="GridBagConstraints.HORIZONTAL"/>
        </button>

        <button text="Add 1000 random values" action="random">
            <gridbagconstraints gridx="0" gridy="1" gridwidth="2" fill="GridBagConstraints.HORIZONTAL"/>
        </button>

        <button text="Print tree values" action="traverse">
            <gridbagconstraints gridx="2" gridy="1" fill="GridBagConstraints.HORIZONTAL"/>
        </button>
        
        <tabbedpane id="panelview" titles="Console">
            <scrollpane>
                <textarea id="console" editable="0" linewrap="1"/>
                <gridbagconstraints gridx="0" gridy="2" gridwidth="3" weighty="0.2" fill="GridBagConstraints.BOTH"/>
            </scrollpane>
            <gridbagconstraints gridx="0" gridy="3" gridwidth="3" weighty="0.8" fill="GridBagConstraints.BOTH"/>
        </tabbedpane>
    </panel>
</frame>